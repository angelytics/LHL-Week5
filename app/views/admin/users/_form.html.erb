<% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented this user from being editted:
        <ul>
          <% @user.errors.full_messages.each do |msg|%>
          <li> <%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>


<div class='container'>
  <div class='well'>
    <%= form_for [:admin, @user] do |f| %>


      <div>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label :firstname %><br>
        <%= f.text_field :firstname %>
      </div>
      <div>
        <%= f.label :lastname %><br>
        <%= f.text_field :lastname %>
      </div>
      <div>
        <%= f.label :admin  %>
        <%= f.check_box :admin %>
      </div>
      <div>
      <%= f.submit :submit %>
      </div>
    <% end %>
  </div>
</div>